# Production Environment Configuration for Railway
NODE_ENV=production
PORT=3000

# Database Configuration
DB_PATH=/tmp/database/users.db

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-railway
JWT_EXPIRES_IN=24h

# Security Configuration
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=https://your-app-name.railway.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Admin User (created on first run)
ADMIN_EMAIL=admin@simplifiaccess.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Frontend URL (update with your actual Railway URL)
FRONTEND_URL=https://your-app-name.railway.app

# Railway specific
RAILWAY_EXTERNAL_URL=https://your-app-name.railway.app