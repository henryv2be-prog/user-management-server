{
  "name": "user-management-tray",
  "version": "1.0.0",
  "description": "System tray monitor for User Management Server",
  "main": "tray-monitor.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "electron": "^27.0.0",
    "node-windows": "^1.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.user-management.tray",
    "productName": "User Management Server Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "tray-monitor.js",
      "server-service.js",
      "server.js",
      "package.json",
      "routes/**/*",
      "database/**/*",
      "middleware/**/*",
      "utils/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "server-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

