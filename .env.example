# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_PATH=./database/users.db

# JWT Configuration (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-chars
JWT_EXPIRES_IN=24h

# Session Configuration (Optional - will be auto-generated if not provided)
SESSION_SECRET=

# Security Configuration
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Admin User (created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Frontend URL (for CORS in production)
FRONTEND_URL=https://app.simplifiaccess.com

# External URL (for Railway/Render deployments)
RENDER_EXTERNAL_URL=

# Mobile App Configuration
MOBILE_APP_SERVER_URL=https://api.simplifiaccess.com

# ESP32 Configuration
ESP32_HEARTBEAT_TIMEOUT=10000
ESP32_OFFLINE_THRESHOLD=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database Pool Configuration
DB_POOL_MAX_CONNECTIONS=10
DB_POOL_IDLE_TIMEOUT=60000